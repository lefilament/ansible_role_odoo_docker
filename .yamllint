---
# Based on ansible-lint config
extends: default

rules:
    braces:
        max-spaces-inside: 1
        level: error
    brackets:
        max-spaces-inside: 1
        level: error
    colons:
        max-spaces-after: -1
        level: error
    commas:
        max-spaces-after: -1
        level: error
    # comments enable
    comments: enable
    comments-indentation: enable
    document-start: enable
    empty-lines:
        max: 3
        level: error
    hyphens:
        level: error
    indentation:
        level: warning
        indent-sequences: consistent
        spaces: 4
        check-multi-line-strings: true
    key-duplicates: enable
    line-length: disable
    new-line-at-end-of-file: enable
    new-lines:
        type: unix
    # trailing-spaces enable
    trailing-spaces: enable
    truthy: enable
